{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "es2019.array"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/package": ["package.json"],
      "@/*": ["src/*", "./*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  }
}
