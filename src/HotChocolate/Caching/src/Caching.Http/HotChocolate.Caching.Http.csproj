<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>HotChocolate.Caching.Http</PackageId>
    <AssemblyName>HotChocolate.Caching.Http</AssemblyName>
    <RootNamespace>HotChocolate.Caching.Http</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Caching\HotChocolate.Caching.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="HotChocolate.Caching.Http.Tests" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Properties\HttpQueryCacheResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>HttpQueryCacheResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Update="Properties\HttpQueryCacheResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>HttpQueryCacheResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
