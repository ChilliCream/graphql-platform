mutation AddReviewAndUser {
  addReview(input: { body: "foo", authorId: 1, upc: 1 }) {
    review {
      body
      author {
        id
        birthdate
      }
    }
  }
  addUser(input: { name: "foo", username: "foo", birthdate: "abc" }) {
    user {
      name
      reviews {
        body
      }
    }
  }
}
