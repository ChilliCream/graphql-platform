<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>HotChocolate.Data</PackageId>
    <AssemblyName>HotChocolate.Data</AssemblyName>
    <RootNamespace>HotChocolate.Data</RootNamespace>
    <NoWarn>$(NoWarn);CA1062</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Core\src\Types\HotChocolate.Types.csproj" />
    <ProjectReference Include="..\..\..\Language\src\Language.SyntaxTree\HotChocolate.Language.SyntaxTree.csproj" />
    <ProjectReference Include="..\..\..\Language\src\Language.Visitors\HotChocolate.Language.Visitors.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="DataResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>DataResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="DataResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DataResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
