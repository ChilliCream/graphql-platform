DbSet<Post>()
    .Select(dtoPost => new PostDto{ 
        Blog = dtoPost.Blog == null ? null : new BlogDto{ 
            TitleImage = dtoPost.Blog.TitleImage == null ? null : new ImageDto{ Url = dtoPost.Blog.TitleImage.Url }
            , 
            Url = dtoPost.Blog.Url 
        }
        , 
        PostId = dtoPost.PostId ?? 0, 
        Title = dtoPost.Title 
    }
    )
