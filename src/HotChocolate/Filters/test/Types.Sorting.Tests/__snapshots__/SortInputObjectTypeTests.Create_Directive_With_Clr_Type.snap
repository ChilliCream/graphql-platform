schema {
  query: Query
}

type Query {
  foo: String
}

input BarSort {
  barProperty: SortOperationKind
  baz: BazSort
}

input BazSort {
  barProperty: SortOperationKind
  bazProperty: SortOperationKind
}

input FooSort {
  bar: BarSort @foo
}

enum SortOperationKind {
  ASC
  DESC
}

directive @foo on INPUT_FIELD_DEFINITION
