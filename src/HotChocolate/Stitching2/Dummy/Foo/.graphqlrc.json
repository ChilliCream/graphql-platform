{
  "schema": "Schema.graphql",
  "extensions": {
    "federation": {
      "name": "Accounts",
      "files": ["Extensions.graphql"],
      "http": {
        "uri": "",
        "batching": ""
      },
      "graphql-ws": {
        "uri": ""
      },
      "features": {
        "stream": true,
        "defer": true,
        "upload": true
      },
      "schema": {
        "includeRootTypes": ["Query", "Mutation", "Subscription"],
        "ignoreDirectiveDeclarations": [
          "defer",
          "deprecated",
          "include",
          "skip",
          "specifiedBy",
          "stream"
        ]
      }
    }
  }
}
