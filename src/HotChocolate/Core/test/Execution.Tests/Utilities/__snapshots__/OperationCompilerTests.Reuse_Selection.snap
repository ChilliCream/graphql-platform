query Hero($episode: Episode, $withFriends: Boolean!) {
  ... on Query {
    hero(episode: $episode) {
      ... on Human {
        name
        friends @include(if: $withFriends) {
          ... on CharacterConnection {
            nodes @include(if: $withFriends) {
              ... on Human {
                id @include(if: $withFriends)
              }
              ... on Droid {
                id @include(if: $withFriends)
              }
            }
          }
        }
      }
      ... on Droid {
        name
        friends @include(if: $withFriends) {
          ... on CharacterConnection {
            nodes @include(if: $withFriends) {
              ... on Human {
                id @include(if: $withFriends)
              }
              ... on Droid {
                id @include(if: $withFriends)
              }
            }
          }
        }
      }
    }
  }
}
