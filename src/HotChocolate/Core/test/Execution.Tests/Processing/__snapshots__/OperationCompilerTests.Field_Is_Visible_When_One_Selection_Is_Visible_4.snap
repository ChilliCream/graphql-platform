query foo($v: Boolean!) {
  hero(episode: EMPIRE) {
    name @include(if: $v)
    ... abc
  }
}

fragment abc on Droid {
  name
  ... {
    name
  }
}

---------------------------------------------------------

query foo($v: Boolean!) @includeCondition(flag: 2) {
  ... on Query {
    hero(episode: EMPIRE) @__execute(id: 0, kind: PURE, type: COMPOSITE) {
      ... on Human {
        name @conditional @__execute(id: 1, kind: PURE, type: LEAF)
      }
      ... on Droid {
        name @__execute(id: 2, kind: PURE, type: LEAF)
      }
    }
  }
}
