query Hero($episode: Episode, $withFriends: Boolean!) {
  hero(episode: $episode) {
    name
    friends @include(if: $withFriends) {
      nodes {
        id
      }
    }
  }
}

---------------------------------------------------------

query Hero($episode: Episode, $withFriends: Boolean!) @includeCondition(flag: 2) {
  ... on Query {
    hero(episode: $episode) @__execute(id: 0, kind: PURE, type: COMPOSITE) {
      ... on Human {
        name @__execute(id: 1, kind: PURE, type: LEAF)
        friends @conditional @__execute(id: 2, kind: DEFAULT, type: COMPOSITE) {
          ... on FriendsConnection {
            nodes @conditional @__execute(id: 3, kind: PURE, type: COMPOSITE_LIST) {
              ... on Human {
                id @conditional @__execute(id: 4, kind: PURE, type: LEAF)
              }
              ... on Droid {
                id @conditional @__execute(id: 5, kind: PURE, type: LEAF)
              }
            }
          }
        }
      }
      ... on Droid {
        name @__execute(id: 6, kind: PURE, type: LEAF)
        friends @conditional @__execute(id: 7, kind: DEFAULT, type: COMPOSITE) {
          ... on FriendsConnection {
            nodes @conditional @__execute(id: 3, kind: PURE, type: COMPOSITE_LIST) {
              ... on Human {
                id @conditional @__execute(id: 4, kind: PURE, type: LEAF)
              }
              ... on Droid {
                id @conditional @__execute(id: 5, kind: PURE, type: LEAF)
              }
            }
          }
        }
      }
    }
  }
}
