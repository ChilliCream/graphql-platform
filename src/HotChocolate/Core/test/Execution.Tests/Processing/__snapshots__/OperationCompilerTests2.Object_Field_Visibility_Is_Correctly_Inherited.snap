query foo($v: Boolean) {
  hero(episode: EMPIRE) @include(if: $v) {
    name
  }
  ... on Query {
    hero(episode: EMPIRE) {
      id
    }
  }
  ... @include(if: $v) {
    hero(episode: EMPIRE) {
      height
    }
  }
}

