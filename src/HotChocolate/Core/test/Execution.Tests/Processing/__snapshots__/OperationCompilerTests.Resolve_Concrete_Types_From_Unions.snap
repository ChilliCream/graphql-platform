query QueryName {
  oneOrTwo {
    ... TypeOneParts
    ... TypeTwoParts
  }
}

fragment TypeOneParts on TypeOne {
  field1 {
    name
  }
}

fragment TypeTwoParts on TypeTwo {
  field1 {
    name
  }
}

---------------------------------------------------------

query QueryName {
  ... on UnionQuery {
    oneOrTwo @__execute(id: 2, kind: DEFAULT, type: COMPOSITE) {
      ... on TypeOne {
        field1 @__execute(id: 4, kind: DEFAULT, type: COMPOSITE) {
          ... on FieldOne1 {
            name @__execute(id: 6, kind: DEFAULT, type: LEAF)
          }
        }
      }
      ... on TypeTwo {
        field1 @__execute(id: 8, kind: DEFAULT, type: COMPOSITE) {
          ... on FieldTwo1 {
            name @__execute(id: 10, kind: DEFAULT, type: LEAF)
          }
        }
      }
    }
  }
}
