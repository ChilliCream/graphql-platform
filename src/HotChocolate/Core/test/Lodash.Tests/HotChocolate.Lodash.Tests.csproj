<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="Current">

  <PropertyGroup>
    <AssemblyName>HotChocolate.Lodash.Tests</AssemblyName>
    <RootNamespace>HotChocolate.Lodash</RootNamespace>
    <Nullable>enable</Nullable>
    <WarningsAsErrors>$(WarningsAsErrors);nullable</WarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Execution\HotChocolate.Execution.csproj" />
    <ProjectReference Include="..\..\src\Lodash\HotChocolate.Lodash.csproj" />
    <ProjectReference Include="..\..\src\Types\HotChocolate.Types.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="$(MSBuildProjectDirectory)\xunit.runner.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!--For Visual Studio for Mac Test Explorer we need this reference here-->
  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Take\RightTests.cs">
      <Link>RightTests.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="__snapshots__" />
  </ItemGroup>

</Project>
