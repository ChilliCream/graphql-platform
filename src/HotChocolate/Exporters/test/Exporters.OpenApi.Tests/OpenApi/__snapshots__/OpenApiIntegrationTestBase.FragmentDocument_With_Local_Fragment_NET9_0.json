{
  "openapi": "3.0.1",
  "info": {
    "title": "HotChocolate.Exporters.OpenApi.Tests | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/users/{userId}": {
      "get": {
        "description": "Fetches a user by their id",
        "operationId": "getUserById",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": null,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/User"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": [
          "id",
          "name",
          "email",
          "address"
        ],
        "type": "object",
        "properties": {
          "id": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "integer"
              }
            ]
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "address": {
            "type": "object",
            "allOf": [
              {
                "required": [
                  "street"
                ],
                "type": "object",
                "properties": {
                  "street": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        }
      }
    }
  }
}
