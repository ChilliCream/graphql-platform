          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          {
            "name": "includeAddress",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            }
          }
