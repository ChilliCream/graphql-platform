        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "email",
                  "name"
                ],
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "The user's email"
                  },
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": null,
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "id",
                    "name",
                    "email"
                  ],
                  "type": "object",
