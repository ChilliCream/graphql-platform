<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>Nitro.CommandLine.Fusion</RootNamespace>
    <AssemblyName>Nitro.CommandLine.Fusion.Compatibility</AssemblyName>
    <PackageName>ChilliCream.Nitro.CommandLine.Fusion.Compatibility</PackageName>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\HotChocolate\Language\src\Language\HotChocolate.Language.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Packaging" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="FusionAbstractionResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FusionAbstractionResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="FusionAbstractionResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>FusionAbstractionResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
