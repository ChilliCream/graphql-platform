<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackAsTool>true</PackAsTool>
    <PublishAot>false</PublishAot>
    <UseAppHost>false</UseAppHost>
    <ToolCommandName>nitro</ToolCommandName>
    <RootNamespace>ChilliCream.Nitro.CommandLine</RootNamespace>
    <AssemblyName>nitro</AssemblyName>
    <PackageId>ChilliCream.Nitro.CommandLine</PackageId>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\CommandLine.Cloud\Nitro.CommandLine.Cloud.csproj" />
    <ProjectReference Include="..\CommandLine.Fusion\Nitro.CommandLine.Fusion.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="CommandLineResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>CommandLineResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="CommandLineResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>CommandLineResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>
