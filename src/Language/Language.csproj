<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>HotChocolate.Language</AssemblyName>
    <RootNamespace>HotChocolate.Language</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>HotChocolate.Language</PackageId>
    <Description>
    The hot chocolate language package provides a GraphQL 
    lexer and parser and builds the foundation for the 
    hot chocolate GraphQL APIs and tools.
    </Description>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>   
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>Full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.4'">
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Lexer\" />
    <Folder Include="AST\" />
    <Folder Include="Parser\" />
  </ItemGroup>

</Project>
