<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="Current">

  <PropertyGroup>
    <ChilliCurrentDirectory>$(MSBuildThisFileDirectory.TrimEnd('\').TrimEnd('/'))</ChilliCurrentDirectory>
    <ChilliImport>$([System.IO.Path]::Combine($(ChilliCurrentDirectory), '..', '..', '..', 'tools'))</ChilliImport>
    <ChilliFramework>$([System.IO.Path]::Combine($(ChilliImport), 'CoreServerFramework.props'))</ChilliFramework>
    <ChilliBuild>$([System.IO.Path]::Combine($(ChilliImport), 'BuildSettings.props'))</ChilliBuild>
  </PropertyGroup>

  <Import Project="$(ChilliFramework)" />
  <Import Project="$(ChilliBuild)" />

  <PropertyGroup>
    <!-- TODO: need to do refactoring and consolidation of TargetFramework(s) -->
    <!-- <TargetFramework>netstandard2.1</TargetFramework> -->
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
    <PackageId>HotChocolate.AspNetCore.Grpc.Client</PackageId>
    <AssemblyName>HotChocolate.AspNetCore.Grpc.Client</AssemblyName>
    <RootNamespace>HotChocolate.AspNetCore.Grpc</RootNamespace>
    <Description>Contains the Hot Chocolate GraphQL gRPC client for ASP .Net core.</Description>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Protobuf Include="$(CCGrpcProtoDirectory)\graphql_service.proto" GrpcServices="Client" Link="Proto\graphql_service.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="$(GoogleProtobufPackageVersion)" />
    <PackageReference Include="Grpc.Net.Client" Version="$(GrpcDotNetPackageVersion)" />
    <PackageReference Include="Grpc.Tools" Version="$(GrpcPackageVersion)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <!--<ProjectReference Include="..\AspNetCore.Grpc.Abstractions\AspNetCore.Grpc.Abstractions.csproj" />-->
  </ItemGroup>

</Project>
