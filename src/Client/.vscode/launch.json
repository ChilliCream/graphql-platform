  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/dotnet-graphql/bin/Debug/netcoreapp2.1/dotnet-graphql.dll",
      // "args": ["generate", "-d", "-n StrawberryShake.Client.GraphQL", "-f"],
      /*"args": [
        "generate",
        "-p ./StarWarsQuery",
        "-l 8.0",
        "-d",
        "-n StrawberryShake.Client.StarWarsQuery",
        "-f"
      ],*/
      "args": [
        "generate",
        "-p ./SchemaRegistry",
        "-l 8.0",
        "-d",
        "-n StrawberryShake.Tools.SchemaRegistry",
        "-f"
      ],
      /*"args": [
        "generate",
        "-p ./GitHub",
        "-l 8.0",
        "-d",
        "-n StrawberryShake.Client.GitHub",
        "-f"
      ],*/
      "cwd": "${workspaceFolder}/dotnet-graphql",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
