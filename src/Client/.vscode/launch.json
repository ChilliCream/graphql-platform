  "version": "0.2.0",
  /*"compounds": [
    {
      "name": "publishSchema",
      "configurations": ["publish schema", ".NET Core Attach"]
    }
  ],*/
  "configurations": [
    {
      "name": "publish schema",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/dotnet-graphql/bin/Debug/netcoreapp2.1/dotnet-graphql.dll",
      "args": [
        "publish",
        "schema",
        "http://localhost:5000",
        "foo",
        "bar",
        "bar.graphql",
        "--tag:abc=def"
      ],
      "cwd": "${workspaceFolder}/dotnet-graphql",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "generate starwars",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/dotnet-graphql/bin/Debug/netcoreapp2.1/dotnet-graphql.dll",
      "args": [
        "generate",
        "-p ./StarWarsQuery",
        "-l 8.0",
        "-d",
        "-n StrawberryShake.Client.StarWarsQuery",
        "-f"
      ],
      "cwd": "${workspaceFolder}/dotnet-graphql",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
