<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Name>HotChocolate.PersistedQueries.AzureBlobStorage</Name>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace>$(Name)</RootNamespace>
        <AssemblyName>$(Name)</AssemblyName>
        <PackageId>$(Name)</PackageId>
        <Description>An implementation of Hot Chocolate persisted queries using Microsoft's Azure Blob Storage.</Description>
    </PropertyGroup>

    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DebugType>portable</DebugType>
        <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <DebugType>pdbonly</DebugType>
        <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Azure.Storage.Blob" Version="10.0.3" />
    </ItemGroup>
    
    <ItemGroup>
        <ProjectReference Include="..\PersistedQueries.Abstractions\PersistedQueries.Abstractions.csproj" />
    </ItemGroup>

</Project>
